extends base.pug

block content 
    h4 Change Title of Video
    form(method="POST")
        input(name="title" placeholder="video Title",value=video.title,required)
        input(name="description", placeholder="Description", required, type="text",maxLength=150, value=video.description)
        input(name="hashtags", placeholder="hashtags, separated by comma", required, type="text", value=video.hashtags.join())
        input(value="save",type="submit")
    