extends base


block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="아이디", name="username", type="text", required)
        input(placeholder="패스워드", name="password", type="password", required)
        input(type="submit", value="Login")
        include partials/social-login
    div.auth-switch
        span 혹시 계정이 없으신가요?
        br
        a(href="/join") 간편 계정 만들기 &rarr;