extends base.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="title" placeholder="Title", required, type="text", maxLength=20)
        input(name="description", placeholder="Description", required, type="text",maxLength=150)
        input(name="hashtags", placeholder="hashtags, separated by comma", required, type="text")
        input(type="submit", value="Upload Video")