extends base.pug

block content
    div
        video#preview
        button#actionBtn Start Recording
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", accept="video/*", required, id="video", name="video")
        label(for="thumb") Thumbnail File
        input(type="file", accept="image/*", required, id="thumb", name="thumb")
        input(name="title" placeholder="제목", required, type="text", maxLength=20)
        input(name="description", placeholder="내용", required, type="text",maxLength=150)
        input(name="hashtags", placeholder="해시태그", required, type="text")
        input(type="submit", value="업로드") 
        input(type="submit", value="Upload Video")

block scripts
    script(src="/static/js/recorder.js") 